    <div class="x_content">
        <form class="form-horizontal form-label-left">

            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4" for="start_date">
                    @Resources.getDescriptionBykey("Business Request ID")  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" id="fullname" class="form-control" value="@Model.RequestId" readonly>

                </div>
            </div>



            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">
                    @Resources.getDescriptionBykey("Request Date") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" value="@Model.RequestDate.ToShortDateString()" readonly id="requestdate" class="form-control">
                    <span class="fa fa-calendar form-control-feedback right" aria-hidden="true"></span>

                </div>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">
                    @Resources.getDescriptionBykey("Request Nature") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" value="Business Trip" readonly id="requestdate" class="form-control">
                    <span class="fa fa-calendar form-control-feedback right" aria-hidden="true"></span>

                </div>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("From Date")</label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" id="FromDate" value="@Model.FromDate.ToShortDateString()" readonly class="form-control">
