            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("To Date")</label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" id="ToDate" value="@Model.ToDaTE.ToShortDateString()" readonly class="form-control">
                    <span class="fa fa-calendar form-control-feedback right" aria-hidden="true"></span>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("No. Of Days") </label>
                <div class="col-md-6 col-sm-6">
                    <input type="number" id="NoofDays" class="form-control" value="@Model.NoOfDays" readonly>

                </div>
            </div>



            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("Reason code")  </label>
                <div class="col-md-6 col-sm-6">

                    <input id="ddlreason" class="form-control" value="@Model.ReasonCode" readonly>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("Alternative Worker")  </label>
                <div class="col-md-6 col-sm-6">

                    <input id="AlternativeWorker" class="form-control" value="@Model.Alternativeworkername" readonly>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("Perdeem Amount") </label>
                <div class="col-md-6 col-sm-6">
                    <input id="perdeemamount" class="form-control" value="@Model.PerdeemAmount" readonly>

                </div>
            </div>
        </form>
