@using Helper
@model  IEnumerable<ESSPortal.DTOModels.DTOExcuseRequest>
@{
    ViewBag.Title = "AbsenceRequests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>@Resources.getDescriptionBykey("Employee Absence Requests") </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>


            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @*<a class="btn btn-app" href="/ExcuseRequest/CreateAbsenceRequest" id="aurl">
                <i class="fa fa-plus"></i> Add
            </a>*@


            <div class="clearfix"></div>
            <table id="datatable-buttons" class="table table-striped table-bordered bulk_action">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="check-all" class="flat"></th>
                        <th> <i class="fa fa-pencil-square-o" aria-hidden="true"></i></th>
                        <th>@Resources.getDescriptionBykey("Request Id") </th>
                        <th>@Resources.getDescriptionBykey("Excuse Type")</th>
                        
                        <th>@Resources.getDescriptionBykey("Request Date")</th>
                        <th>@Resources.getDescriptionBykey("Personal Number")</th>
                        <th>@Resources.getDescriptionBykey("Name")</th>
                        <th>@Resources.getDescriptionBykey("Excuse Id")</th>
                        
                        <th>@Resources.getDescriptionBykey("State")</th>

                    </tr>
                </thead>


                <tbody>
                    @foreach (var @item in Model)
                    {
                        <tr>
                            <td><input type="checkbox" class="flat" name="table_records"></td>
                            @*<td>1</td>*@
                            <td><a href="@item.URL"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                            <td>@item.RequestId</td>
                            <td>@item.ExcuseType</td>
                            <td>@item.Date </td>

                            <td>@item.PersonalNumber</td>
                            <td>@item.Name</td>
                            <td>@item.ExcuseId</td>
                           
                            <td>@item.State </td>
                        </tr>
                    }
                </tbody>
            </table>

            <script>
                $(document).ready(function () {


                    const fillRange = (start, end) => {
                        return Array(end - start + 1).fill().map((item, index) => start + index);
                    };

                    var handleDataTableButtons = function () {
                        table_length = $('#datatable-buttons').find('tr')[0].cells.length;
                        const exported_coulmns = fillRange(2, table_length - 1);
                        var direction = '@Resources.getDirectionByLanguageId()';
                        var languageUrl = "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/English.json";
                        if (direction == 'RTL') {
                            languageUrl = "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Arabic.json";
                        }

                        if ($("#datatable-buttons").length) {
                            $("#datatable-buttons").DataTable({
                                "pagingType": "full_numbers",

                                dom: "Bfrtip",
                                "language": {
                                    "url": languageUrl
                                },
                                buttons: [
                                    {
                                        extend: "copy",
                                        className: "btn-sm",
                                        title: 'Employee Absence Requests',
                                        text: "Copy"
                                        , exportOptions: {
                                            columns: exported_coulmns
                                        }
                                    },
                                    {
                                        extend: "csv",
                                        className: "btn-sm",
                                        title: 'Employee Absence Requests',
                                        text: "Excel"
                                        , exportOptions: {
                                            columns: exported_coulmns
                                        }
                                    },
                                   
                                    {
                                        extend: "pdfHtml5",
                                        className: "btn-sm",
                                        title: 'Employee Absence Requests',
                                        text: "Print"
                                        , exportOptions: {
                                            columns: exported_coulmns
                                        }

                                    },
                                ] ,
                                initComplete: function () {
                                    copy_btn = $("#datatable-buttons_wrapper > div.dt-buttons.btn-group > a.btn.btn-default.buttons-copy.buttons-html5.btn-sm");
                                    excel_btn = $("#datatable-buttons_wrapper > div.dt-buttons.btn-group > a.btn.btn-default.buttons-csv.buttons-html5.btn-sm");
                                    print_btn = $("#datatable-buttons_wrapper > div.dt-buttons.btn-group > a.btn.btn-default.buttons-pdf.btn-sm");
                                    if (copy_btn.length > 0) {

                                        copy_btn.addClass("btn-app");
                                        copy_btn.empty();
                                        copy_btn.append("<i class='fa fa-copy'></i><span>Copy</span>");
                                    }
                                    if (excel_btn.length > 0) {
                                        excel_btn.addClass("btn-app");
                                        excel_btn.empty();
                                        excel_btn.append("<i class='fa fa-file-excel-o'></i><span>Excel</span>");
                                    }
                                    if (print_btn.length > 0) {
                                        print_btn.addClass("btn-app");
                                        print_btn.empty();
                                        print_btn.append("<i class='fa fa-print'></i><span>Print</span>");
                                    }

                                    var addResource = '@Resources.getDescriptionBykey( "Add")';
                                    var direction = '@Resources.getDirectionByLanguageId()';

                                    if (direction == 'LTR') {
                                        $('#datatable-buttons_wrapper > div.dt-buttons.btn-group').prepend(" <a class='btn btn-app' href='/ExcuseRequest/CreateAbsenceRequest' id='aurl'>  <i class='fa fa-plus'></i>" + addResource + " </a>");
                                    }
                                    else {
                                        $('#datatable-buttons_wrapper > div.dt-buttons.btn-group').append(" <a class='btn btn-app' href='/ExcuseRequest/CreateAbsenceRequest' id='aurl'>  <i class='fa fa-plus'></i>" + addResource + " </a>");
                                    }
                                }
                            });
                        }
                    };
                    TableManageButtons = function () {
                        "use strict";
                        return {
                            init: function () {
                                handleDataTableButtons();
                            }
                        };
                    }();



                    $('#datatable-keytable').DataTable({
                        keys: true
                    });

                    $('#datatable-responsive').DataTable();

                    $('#datatable-scroller').DataTable({
                        ajax: "js/datatables/json/scroller-demo.json",
                        deferRender: true,
                        scrollY: 380,
                        scrollCollapse: true,
                        scroller: true
                    });

                    $('#datatable-fixed-header').DataTable({
                        fixedHeader: true
                    });

                    var $datatable = $('#datatable-checkbox');

                    $datatable.dataTable({
                        'order': [[2, 'asc']],
                        'columnDefs': [
                            { orderable: false, targets: [0] }
                        ]
                    });
                    $datatable.on('draw.dt', function () {
                        $('input').iCheck({
                            checkboxClass: 'icheckbox_flat-green'
                        });
                    });

                    TableManageButtons.init();
                   

                    function getUrlVars() {
                        var vars = [], hash;
                        var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
                        for (var i = 0; i < hashes.length; i++) {
                            hash = hashes[i].split('=');
                            vars.push(hash[0]);
                            vars[hash[0]] = hash[1];
                        }
                        return vars;
                    }

                    var reqtype = getUrlVars()["reqnature"];
                    debugger;
                    if (reqtype == 0)
                        $("aurl").attr('href', '/LeaveRequest/CreateLeaveRequest?reqnature=0');
                    if (reqtype == 1)
                        $("aurl").attr('href', '#');
                    if (reqtype == 2)
                        $("aurl").attr('href', '/LeaveRequest/CreateLeaveEnchasment');
                    if (reqtype == 3)
                        $("aurl").attr('href', '/LeaveRequest/CreateTicketRequest');
                    if (reqtype == 4)
                        $("aurl").attr('href', '/LeaveRequest/CreateLeaveEnchasment');
                    if (reqtype == 5)
                        $("aurl").attr('href', '/LeaveRequest/CreateLeavePlanning');
                });
            </script>
        </div>
    </div>
</div>

