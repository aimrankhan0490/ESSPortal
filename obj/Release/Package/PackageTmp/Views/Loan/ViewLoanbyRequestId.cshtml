<div class="x_panel">
    <div class="x_title">
        <h2>@Resources.getDescriptionBykey("Loan Request")</h2>

        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <form class="form-horizontal form-label-left">

            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4" for="start_date">
                    @Resources.getDescriptionBykey("Loan Request ID") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" id="fullname" value="@Model.LoanRequestId" class="form-control" readonly>
                    <span class="fa fa-calendar form-control-feedback right" aria-hidden="true"></span>


                </div>
            </div>
            <div class="form-group  col-md-4">
                <label class="control-label col-md-4 col-sm-4" for="end_date">
                   @Resources.getDescriptionBykey("Reason Code")  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" id="ReasonCode" value="@Model.ReasonCode" class="form-control" readonly>
                </div>
            </div>


            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">
                    @Resources.getDescriptionBykey("Request Date") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" readonly id="requestdate" value="@Model.RequestDate"  class="form-control">
                    <span class="fa fa-calendar form-control-feedback right" aria-hidden="true"></span>

                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("Loan Type") </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" id="loantype" value="@Model.Loantype.ToString()" readonly class="form-control">
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("Loan Amount") </label>
                <div class="col-md-6 col-sm-6">
                    <input type="number" min="1"  value="@Model.Loanvalue.ToString()" readonly  id="loanamount" class="form-control">
                </div>
            </div>
        </form>
    </div>
</div>
<div class="x_panel">
    <div class="x_title">
        <h2>@Resources.getDescriptionBykey("Comments") </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <form class="form-horizontal form-label-left">
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">
                   @Resources.getDescriptionBykey("Deduction Start Date")  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" id="deducstarttdate"  readonly value="@Model.DeductionStartDate.ToShortDateString()" class="form-control">
                    <span class="fa fa-calendar form-control-feedback right" aria-hidden="true"></span>

                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">
                    @Resources.getDescriptionBykey("No of Installment") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" max="24" min="1"  readonly value="@Model.NoOfInsatllment" id="noofinstallment" class="form-control">
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">
                    @Resources.getDescriptionBykey("Monthly Installment")  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" readonly id="monthlyinstallment" value="@Model.MonthlyInstallment" class="form-control">
                </div>
            </div>

            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="textarea">
                    @Resources.getDescriptionBykey("Comment") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @*<textarea id="comment" required="required" name="comment" class="form-control col-md-7 col-xs-12"></textarea>*@
                    <div>@Model.Comments</div>
                </div>
            </div>

            
        </form>
    </div>
</div>
