                        <th> <i class="fa fa-pencil-square-o" aria-hidden="true"></i></th>
                        <th>@Resources.getDescriptionBykey("Transaction Id")</th>
                        <th>@Resources.getDescriptionBykey("Request Id") </th>
                        <th>@Resources.getDescriptionBykey("Reason")</th>

                        <th>@Resources.getDescriptionBykey("Personal Number")</th>
                        <th>@Resources.getDescriptionBykey("Name")</th> 
                        <th>@Resources.getDescriptionBykey("Transaction Date")</th>
                        
                        <th>@Resources.getDescriptionBykey("Status")</th>
                        <th>@Resources.getDescriptionBykey("Action")</th>
                        
                    </tr>
                </thead>


                <tbody>
                    @foreach (var @item in Model)
                    {
                        <tr>
                            <td><input type="checkbox" class="flat" name="table_records"></td>
