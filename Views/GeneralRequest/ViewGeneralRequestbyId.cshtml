@using Helper
@model ESSPortal.ESSWebService.GeneralRequest

@{
    ViewBag.Title = "ViewGeneralRequestbyId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="x_panel">
    <div class="x_title">
        <h2>@Resources.getDescriptionBykey("General Request")</h2>

        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <form class="form-horizontal form-label-left">

            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4" for="start_date">
                    @Resources.getDescriptionBykey("Transaction ID") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" id="fullname" value="@Model.TransactionId" class="form-control" readonly>

                </div>
            </div>
            <div class="form-group  col-md-4">
                <label class="control-label col-md-4 col-sm-4" for="end_date">
                    @Resources.getDescriptionBykey("Reason Code") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" readonly id="reasonid" value="@Model.ReasonCode" class="form-control">
                </div>
            </div>


            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">
                    @Resources.getDescriptionBykey("Transaction Date") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" readonly id="requestdate" value="@Model.Transactiondate.ToShortDateString() " class="form-control">
                    <span class="fa fa-calendar form-control-feedback right" aria-hidden="true"></span>

                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("Request Id")</label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" readonly id="requestid" value="@Model.RequestId " class="form-control">
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("Request Nature")</label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" readonly id="requestid" value="@Model.Generalnature.ToString() " class="form-control">
                </div>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("Report Language")</label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" readonly id="requestid" value="@Model.Reportlanguage.ToString()" class="form-control">
                </div>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label col-md-4 col-sm-4">@Resources.getDescriptionBykey("Send To")</label>
                <div class="col-md-6 col-sm-6">
                    <input type="text" readonly id="requestid" value="@Model.Sendto " class="form-control">
                </div>
            </div>
        </form>
    </div>
</div>
<div class="x_panel">
    <div class="x_title">
        <h2>@Resources.getDescriptionBykey("Comments")</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <form class="form-horizontal form-label-left">

            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="textarea">
                    @Resources.getDescriptionBykey("Comment") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @*<textarea id="comment" required="required" readonly value="@Model.Comments" name="comment" class="form-control col-md-7 col-xs-12"></textarea>*@
                    <div>@Model.Comments</div>
                </div>
            </div>

            @*<div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="textarea">
                        Attachment <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="file" id="fileupload" accept="image/*" name="file" />

                    </div>
                </div>*@
        </form>
    </div>
</div>
<div class="x_panel">
    <div class="x_title">
        <h2>@Resources.getDescriptionBykey("Workflow History")</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <form class="form-horizontal form-label-left">

            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="textarea">
                    @Resources.getDescriptionBykey("Workflow") <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
